<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Users.ConfirmActivity">
    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please Confirm Your Shipment Details"
        android:textSize="18sp"
        android:layout_margin="15dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"/>
    <EditText
        android:id="@+id/ship_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt"
        android:layout_marginTop="60dp"
        android:hint="Your Name"
        android:layout_marginLeft="20dp"
        />
    <EditText
        android:id="@+id/ship_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="10"
        android:layout_below="@+id/ship_name"
        android:layout_marginTop="5dp"
        android:hint="Your Phone"
        android:layout_marginLeft="20dp"
        />
    <EditText
        android:id="@+id/ship_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ship_phone"
        android:layout_marginTop="5dp"
        android:hint="Your home Address"
        android:layout_marginLeft="20dp"
        />
    <EditText
        android:id="@+id/ship_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ship_address"
        android:layout_marginTop="5dp"
        android:hint="Your home City"
        android:layout_marginLeft="20dp"
        />
    <Button
        android:id="@+id/confirmbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="@color/colorPrimaryDark"
        android:layout_margin="20dp"
        android:text="Confirm"/>

</RelativeLayout>