<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardMaxElevation="15dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:id="@+id/product_name_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"/>
        <ImageView
            android:id="@+id/product_image_item"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/product_name_item"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"/>
        <TextView
            android:id="@+id/product_price_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price"
            android:layout_below="@id/product_image_item"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:id="@+id/product_description_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_below="@id/product_price_item"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>