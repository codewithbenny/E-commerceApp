<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Users.CategoryDonate"
    android:background="@android:color/white">
    <TextView
        android:id="@+id/slogan_category1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textSize="26sp"
        android:text="Select Category to Help"/>
    <LinearLayout
        android:id="@+id/linear_category11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="26dp"
        android:layout_below="@id/slogan_category1">
        <ImageView
            android:id="@+id/t_shirts1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/tshirts"/>
        <ImageView
            android:id="@+id/female_dresses1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/female_dresses"/>
        <ImageView
            android:id="@+id/sports_tshirts1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_funny_toy_robot"/>
        <ImageView
            android:id="@+id/sweater1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/sweather"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_category21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="26dp"
        android:layout_below="@id/linear_category11">
        <ImageView
            android:id="@+id/glasses1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/glasses"/>
        <ImageView
            android:id="@+id/purses1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/purses_bags"/>
        <ImageView
            android:id="@+id/hats1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/hats"/>
        <ImageView
            android:id="@+id/shoes1"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/shoess"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_category31"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="26dp"
        android:layout_below="@id/linear_category21">
        <ImageView
            android:id="@+id/headphones1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/headphoness"/>
        <ImageView
            android:id="@+id/laptop1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/laptops"/>
        <ImageView
            android:id="@+id/watches1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/watches"/>
        <ImageView
            android:id="@+id/mobiles1"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/mobiles"/>
    </LinearLayout>
    <TextView
        android:layout_below="@+id/linear_category31"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:text="Your Small help can be the Smile of Needy peoples Buy Donating produ
        you can buy the Smiles"/>
</RelativeLayout>